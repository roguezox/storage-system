# Confluent Cloud Configuration
# Copy this file to .env and fill in your actual credentials

# Kafka Cluster Configuration
# Get these from: Confluent Cloud Console -> Cluster -> Cluster Settings -> Bootstrap server
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.us-east-1.aws.confluent.cloud:9092

# Kafka API Credentials
# Get these from: Confluent Cloud Console -> Cluster -> API Keys -> Add Key
KAFKA_API_KEY=your-kafka-api-key
KAFKA_API_SECRET=your-kafka-api-secret

# Schema Registry Configuration (Optional)
# Get these from: Confluent Cloud Console -> Schema Registry -> API endpoint
SCHEMA_REGISTRY_URL=https://psrc-xxxxx.us-east-2.aws.confluent.cloud

# Schema Registry API Credentials (Optional)
# Get these from: Confluent Cloud Console -> Schema Registry -> API credentials
SCHEMA_REGISTRY_API_KEY=your-schema-registry-key
SCHEMA_REGISTRY_API_SECRET=your-schema-registry-secret

# Consumer Group ID
KAFKA_CONSUMER_GROUP_ID=stream-consumer-group
